{
	"name": "lucy-language-extension",
	"description": "Lucy Language Extension",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"publisher": "daniel-vetter",
	"repository": {},
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.33.0"
	},
	"activationEvents": [
		"onLanguage:lucy"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "lucy",
				"extensions": [
					".lucy"
				],
				"aliases": [
					"Lucy"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "lucy",
				"scopeName": "source.lucy",
				"path": "./lucy.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "lucy.openSyntaxTree",
				"title": "Lucy: Show Syntax Tree"
			},
			{
				"command": "lucy.openScopeTree",
				"title": "Lucy: Show Scope Tree"
			},
			{
				"command": "lucy.openAssembly",
				"title": "Lucy: Show Assembly"
			},
			{
				"command": "lucy.attachDebugger",
				"title": "Lucy: Attach Debugger to Language Server"
			},
			{
				"command": "lucy.attachProfiler",
				"title": "Lucy: Attach Profiler to Language Server"
			},
			{
				"command": "lucy.exportProfiler",
				"title": "Lucy: Export custom profiler log"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1"
	},
	"devDependencies": {
		"@types/vscode": "^1.32.0",
		"@types/mocha": "^5.2.0",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^4.0.2"
	}
}